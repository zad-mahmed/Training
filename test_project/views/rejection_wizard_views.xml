<odoo>
    <record id="view_rejection_wizard_form" model="ir.ui.view">
        <field name="name">rejection.wizard.form</field>
        <field name="model">rejection.wizard</field>
        <field name="arch" type="xml">
            <form string="Rejection Reason">
                <group>
                    <field name="rejection_reason"/>
                </group>
                <footer>
                    <button string="Confirm" name="action_confirm_rejection" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

